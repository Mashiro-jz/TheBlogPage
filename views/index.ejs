        <div class="createPost">
            <h2>Create a post</h2>
            <form action="/submit" method="POST">
                <input type="text" name="userName" id="userName" placeholder="Nickname here" required>
                <textarea type="text" name="postContent" id="postContent" placeholder="Post content here" required></textarea>
                <div class="buttons">
                    <button type="reset">Clear</button>
                    <button type="submit">Publish</button>
                </div>
            </form>
        </div>

        <hr class="divider text-secondary my-4">
        
        <div class = "createPost">
            <h2>Posts</h2>
            <% if(posts.length > 0) { %>
                <% posts.forEach(post => { %>
                    <div id="post-<%= post.id %>">
                        <h3 class="userName"><%= post.user %> said:</h3>
                        <p class="postContent"><%= post.content %></p>
                        <div class="buttons">
                            <form action="/delete" method="POST">
                                <input type="hidden" name="postId" value="<%= post.id %>">
                                <button type="submit">Delete</button>
                            </form>
                            <form action="/edit" method="POST">
                                <input type="hidden" name="postId" value="<%= post.id %>">
                                <button type="submit">Edit</button>
                            </form>
                        </div>
                        <hr class="divider text-secondary my-4">
                    </div>
                <% })} else { %>
                    <p>No posts yet. Be the first to create one!</p>
                <% } %>
        </div>
